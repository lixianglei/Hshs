<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="165dp"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="6dp">

    <ImageView
        android:layout_width="153dp"
        android:layout_height="211.5dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/main_bookText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/Image_equipment"
        android:textColor="#000000"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Policy"
            android:textColor="#5B5B5B"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/Seal"
            android:textColor="#636363"
            android:textSize="8sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="#D2D2D2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/teaching_material"
        android:textColor="#444444"
        android:textSize="8sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="@color/D2D2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:drawablePadding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/main_icon_zan"
                android:gravity="center"
                android:text="357"
                android:textColor="@color/TextColor"
                android:textSize="6sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:drawablePadding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/main_icon_message"
                android:gravity="center"
                android:text="357"
                android:textColor="@color/TextColor"
                android:textSize="6sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>