<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="91.5dp"
    android:layout_height="139.5dp"
    android:background="@drawable/menu_bg"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/popu_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_icon_xiaoxi_normal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息列表"
        android:textColor="#fff"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="1.5dp"
        android:background="#979797"></LinearLayout>
    <LinearLayout
        android:id="@+id/popu_chanpinzhuisu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_icon_chanpinzhuisu_normal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品追溯"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="1.5dp"
        android:background="#979797"></LinearLayout>
    <LinearLayout
        android:id="@+id/popu_ruku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_icon_ruku_normal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入库"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="1.5dp"
        android:background="#979797"></LinearLayout>
    <LinearLayout
        android:id="@+id/popu_chuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_icon_chuku_normal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出库"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="1.5dp"
        android:background="#979797"></LinearLayout>
    <LinearLayout
        android:id="@+id/popu_panku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_icon_panku_normal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="盘库"
            android:textColor="#fff"/>
    </LinearLayout>


</LinearLayout>