<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_picture_beijingtu_normal" />

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/login_picture_logo_normal" />


    <ImageView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px16"
        android:src="@drawable/login_picture_biaoti_normal" />

    <LinearLayout
        android:id="@+id/login_user"
        android:layout_width="@dimen/px576"
        android:layout_height="@dimen/px82"
        android:layout_below="@id/login_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px86"
        android:background="@drawable/login_ed_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/px62"
            android:layout_height="match_parent"
            android:background="#57565c"
            android:scaleType="centerCrop"
            android:src="@drawable/loginusername" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center"
            android:hint="用户名"
            android:textColorHint="#cfd1d2"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/login_pwd"
        android:layout_width="@dimen/px576"
        android:layout_height="@dimen/px82"
        android:layout_below="@id/login_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px28"
        android:background="@drawable/login_ed_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/px62"
            android:layout_height="match_parent"
            android:background="#57565c"
            android:scaleType="centerCrop"
            android:src="@drawable/loginusername" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center"
            android:hint="密码"
            android:textColorHint="#cfd1d2"
            android:textSize="14sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/login_save_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/login_pwd"
        android:layout_below="@+id/login_pwd"
        android:layout_marginTop="@dimen/px26"
        android:text="记住用户名" />

    <TextView
        android:layout_width="@dimen/px576"
        android:layout_height="@dimen/px80"
        android:layout_below="@id/login_save_pwd"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_btn_bg"
        android:drawableLeft="@drawable/loginpage_icon_normal"
        android:gravity="center"
        android:paddingLeft="@dimen/px24"
        android:text="登录\t\tLogin"
        android:textColor="@color/white" />


</RelativeLayout>
